# Forgejo Configuration

# PostgreSQL Database
POSTGRES_USER=forgejo
POSTGRES_PASSWORD=<generate-secure-password>
POSTGRES_DB=forgejo

# CI/CD Runner (get from Forgejo Admin > Actions > Runners)
GITEA_RUNNER_REGISTRATION_TOKEN=<token-from-admin-panel>

# Authentik OAuth2 Configuration
# Get these values from Authentik after creating the OAuth2 provider
OAUTH_CLIENT_ID= #<client-id-from-authentik>
OAUTH_CLIENT_SECRET= # <client-secret-from-authentik>
AUTHENTIK_URL=https://auth.example.com
